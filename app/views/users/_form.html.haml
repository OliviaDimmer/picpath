= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
%ol.inputs
  %li
    = f.label :name
    = f.text_field :name
  %li
    = f.label :email
    = f.text_field :email
  %li
    = f.label :phone_number
    = f.text_field :phone_number
  %li.actions
    = f.submit 'Save'
