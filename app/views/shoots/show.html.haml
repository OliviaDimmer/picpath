%p#notice= notice
%article
  %ul
    %li
      %h3= @shoot.slug
    %li= @shoot.assignment_description
    %li= time_display(@shoot.start)
    %li= time_display(@shoot.end)
    %li= @shoot.location
    %li= @shoot.contact_name
    %li= @shoot.contact_phone_number
    %li= time_display(@shoot.deadline)

    %ul.controls
      %li= link_to 'Edit', edit_shoot_path(@shoot)
      %li= link_to 'Destroy', @shoot, method: :delete, data: { confirm: 'are you sure?' }


%p.back= link_to 'Back', shoots_path
